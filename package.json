{
    "name": "bookstore",
    "version": "1.0.0",
    "description": "Generated by cds-services-archetype",
    "license": "ISC",
    "repository": "<Add your repository here>",
    "scripts": {
        "build": "cds build/all --clean",
        "schema": "cds compile srv --to sql > srv/src/main/resources/schema.sql",
        "deploy": "cds deploy"
    },
    "dependencies": {
        "@sap/capire-products": "file:sap-capire-products-1.0.0.tgz",
        "@sap/cds": "^4.1.7",
        "@sap/cds-odata-v2-adapter-proxy": "latest",
        "hdb": "^0.17.1"
    },
    "cds": {
        "build": {
            "target": "."
        },
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "sqlite.db"
                },
                "[production]": {
                    "kind": "hana"
                }
            }
        },
        "odata": {
            "version": "v4"
        }
    },
    "devDependencies": {
        "@sap/hdi-deploy": "3.7.0",
        "sqlite3": "^4.1.1"
    }
}
